{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/vite" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { 
      "src": "^/assets/(.*)", 
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/assets/$1" 
    },
    { "src": "^/fallback.html", "dest": "/fallback.html" },
    { "handle": "filesystem" },
    { 
      "src": "/(.*)", 
      "dest": "/index.html",
      "continue": true
    },
    { "src": "/(.*)", "status": 404, "dest": "/fallback.html" }
  ]
} 